<h1><%= @user.name %>のページ</h1>

<p>ユーザーアイコン</p>
<% if @user.image.present? %>
   <%= image_tag @user.image.url %>
<% else %>
   <%= image_tag 'default.png' %>
<% end %>

<p>メールアドレス: <%= @user.email %></p>

<% if @user.id == @current_user.id %>
  <%= link_to_if(true, 'plofile_Edit', edit_user_path(@user)) %>
  <%= link_to_if(false,'plofile_Edit', edit_user_path(@user)){} %>
<% end %>
<%= link_to 'お気に入り一覧へ', favorites_path %>
<%= link_to '投稿一覧へ', pictures_path %>
