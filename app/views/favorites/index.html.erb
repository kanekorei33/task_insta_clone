<h1><%= current_user.name %>のお気に入り一覧</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Photo</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.picture.content %></td>
        <% if favorite.picture.photo.url.present? %>
          <td><%= image_tag (favorite.picture.photo.url) %></td>
        <% end %>
        <td><%= favorite.user.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '投稿一覧へ', pictures_path %>
